{
  "name": "firefox-distraction-limiter",
  "version": "1.0.0",
  "description":  "Helps users limit time spent on distracting websites by monitoring usage and blocking sites when daily limits are reached. Features customizable time limits, motivational timeout notes, and clean modern UI.",
  "main": "./background_scripts/main.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.{js,json,css,md}\"",
    "build": "node build.js",
    "prebuild": "yarn lint && yarn test",
    "clean": "rm -rf dist/ *.zip",
    "package": "yarn clean && yarn prebuild && yarn build",
    "verify-package": "unzip -l firefox-distraction-limiter-v*.zip"
  },
  "jest": {
    "setupFiles": [
      "jest-webextension-mock"
    ]
  },
  "keywords": [
    "firefox",
    "extension",
    "productivity",
    "time-limiter"
  ],
  "author": "Dávid Godzsák",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/davidgodzsak/firefox-timelimit-extension"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "archiver": "^7.0.1",
    "eslint": "^9.26.0",
    "globals": "^15.8.0",
    "jest": "^29.7.0",
    "jest-webextension-mock": "^4.0.0",
    "prettier": "^3.5.3"
  },
  "dependencies": {}
}
